# IMAP Configuration
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=user@example.com
IMAP_PASSWORD=your-password
IMAP_FOLDER=INBOX
IMAP_SPAM_FOLDER=Spam
IMAP_USE_IDLE=true
IMAP_POLL_INTERVAL=60

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=haiku  # haiku (fast/cheap), sonnet (balanced), opus (best)

# Spam Detection
SPAM_SENSITIVITY=5      # 1-10 scale (1=relaxed, 10=strict)
SPAM_PROMPT=Standard    # "Standard" or custom system prompt
ANALYSIS_LIMIT=50       # Max emails to analyze on startup (0 = unlimited)

# Logging
LOG_LEVEL=INFO
